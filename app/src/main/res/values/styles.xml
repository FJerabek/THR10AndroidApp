<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/textOnPrimary</item>
        <item name="backgroundColor">@color/background</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <style name="EditText" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PresetRowDeleteButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/ic_delete_24</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>


    <style name="PresetRowHandle" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/ic_menu_24</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="PresetRowText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ControlKnob">
        <item name="inner_color">?attr/colorPrimary</item>
        <item name="outer_color">?attr/colorPrimaryDark</item>
        <item name="value_text_color">?attr/colorOnPrimary</item>
        <item name="selected_color">?attr/colorPrimary</item>
    </style>

    <style name="SpinnerTheme" parent="@style/Theme.MaterialComponents.Light">
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
    </style>

</resources>