<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="cz.fjerabek.thr10controller.data.enums.effect.EFlanger" />
        <import type="cz.fjerabek.thr10controller.data.enums.effect.EEffectType" />
        <import type="cz.fjerabek.thr10controller.data.controls.effect.Flanger" />

        <variable
            name="effect"
            type="cz.fjerabek.thr10controller.data.controls.effect.EffectSpecific" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cz.fjerabek.thr10controller.ui.CustomKnob

            android:id="@+id/speed"
            android:layout_width="@dimen/knob_size"
            android:layout_height="@dimen/knob_size"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/manual"
            app:layout_constraintTop_toTopOf="parent"
            app:value="@{effect.type == EEffectType.FLANGER? ((Flanger) effect).speed : EFlanger.SPEED.min}"
            app:property="@{EFlanger.SPEED}"
            app:name="Speed" />


        <cz.fjerabek.thr10controller.ui.CustomKnob
            android:id="@+id/manual"
            android:layout_width="@dimen/knob_size"
            android:layout_height="@dimen/knob_size"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toStartOf="@+id/speed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:value="@{effect.type == EEffectType.FLANGER? ((Flanger) effect).manual : EFlanger.MANUAL.min}"
            app:property="@{EFlanger.DEPTH}"
            app:name="Manual" />


        <cz.fjerabek.thr10controller.ui.CustomKnob

            android:id="@+id/depth"
            android:layout_width="@dimen/knob_size"
            android:layout_height="@dimen/knob_size"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/manual"
            app:layout_constraintTop_toTopOf="@id/feedback"
            app:value="@{effect.type == EEffectType.FLANGER? ((Flanger) effect).depth : EFlanger.DEPTH.min}"
            app:property="@{EFlanger.DEPTH}"
            app:name="Depth" />


        <cz.fjerabek.thr10controller.ui.CustomKnob
            android:id="@+id/feedback"
            android:layout_width="@dimen/knob_size"
            android:layout_height="@dimen/knob_size"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toStartOf="@+id/speed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/speed"
            app:value="@{effect.type == EEffectType.FLANGER? ((Flanger) effect).feedback : EFlanger.FEEDBACK.min}"
            app:property="@{EFlanger.FEEDBACK}"
            app:name="Feedback" />


        <cz.fjerabek.thr10controller.ui.CustomKnob
            android:id="@+id/spread"
            android:layout_width="@dimen/knob_size"
            android:layout_height="@dimen/knob_size"
            android:paddingTop="6dp"
            app:property="@{EFlanger.SPREAD}"
            app:value="@{effect.type == EEffectType.FLANGER? ((Flanger) effect).spread : EFlanger.SPREAD.min}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feedback"
            app:name="Spread"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>