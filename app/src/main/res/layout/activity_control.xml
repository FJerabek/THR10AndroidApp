<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="uartStatus"
            type="cz.fjerabek.thr10controller.data.message.serial.StatusMessage"/>

        <variable
            name="firmwareVersion"
            type="cz.fjerabek.thr10controller.data.message.serial.FirmwareVersionMessage" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/top_app_bar"
                app:navigationIcon="@drawable/ic_menu_24"
                app:title="@string/app_name">

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ControlActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <Button
                    android:id="@+id/noPresetSelector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="@string/no_preset"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp" />

                <View style="@style/Divider" />

                <ListView
                    android:id="@+id/presetList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="@dimen/sheet_peek_distance">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/battery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@{(uartStatus.charging == uartStatus.charging.CHARGING)? @drawable/ic_battery_charging_24 : @drawable/ic_battery_24}"
                        android:drawablePadding="2dp"
                        android:drawableTint="@color/colorAccent"
                        android:text="@{String.valueOf(uartStatus.battery) + `%`}"
                        android:textColor="@color/textColorOnDark"
                        app:layout_constraintEnd_toStartOf="@+id/uptime"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/uptime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_timer_24"
                        android:drawablePadding="2dp"
                        android:drawableTint="@color/colorAccent"
                        android:text="@{String.valueOf(uartStatus.uptime) + ` s`}"
                        android:textColor="@color/textColorOnDark"
                        app:layout_constraintEnd_toStartOf="@id/current"
                        app:layout_constraintStart_toEndOf="@+id/battery"
                        app:layout_constraintTop_toTopOf="parent" />


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_flash_on_24"
                        android:drawablePadding="2dp"
                        android:drawableTint="@color/colorAccent"
                        android:text="@{String.valueOf(uartStatus.current) + ` mAh`}"
                        android:textColor="@color/textColorOnDark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/uptime"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/current"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="10sp"
                        android:text="@{`FW ver. ` + String.format(`%s.%s.%s`, firmwareVersion.major, firmwareVersion.minor, firmwareVersion.patch)}"
                        tools:ignore="SmallSp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:behavior_peekHeight="@dimen/sheet_peek_distance"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:elevation="4dp">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabs"
                        style="@style/Widget.MaterialComponents.TabLayout.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:paddingHorizontal="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tabMode="scrollable" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/design_default_color_background"
                    android:orientation="horizontal" />
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>
</layout>