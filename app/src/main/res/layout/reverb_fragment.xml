<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="cz.fjerabek.thr10controller.data.enums.reverb.EReverbType"/>
        <import type="cz.fjerabek.thr10controller.data.enums.EStatus"/>
        <import type="android.view.View" />

        <variable
            name="reverb"
            type="cz.fjerabek.thr10controller.data.controls.Reverb" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            tools:context=".ui.fragments.CompressorFragment">


            <Spinner
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:id="@+id/reverbSelect"
                app:layout_constraintEnd_toStartOf="@id/reverbStatus"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="10dp"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"

                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/reverbStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/reverbSelect"
                app:layout_constraintTop_toTopOf="@+id/reverbSelect"
                app:layout_constraintEnd_toEndOf="parent"
                android:checked="@{reverb.status == EStatus.ON}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/hall"
            layout="@layout/reverb_hall"
            bind:specific = "@{reverb.specific}"
            android:visibility="@{(reverb.specific.type == EReverbType.HALL)? View.VISIBLE : View.GONE}"/>

        <include
            android:id="@+id/plate"
            layout="@layout/reverb_plate"
            bind:specific = "@{reverb.specific}"
            android:visibility="@{(reverb.specific.type == EReverbType.PLATE)? View.VISIBLE : View.GONE}"/>

        <include
            android:id="@+id/room"
            layout="@layout/reverb_room"
            bind:specific = "@{reverb.specific}"
            android:visibility="@{(reverb.specific.type == EReverbType.ROOM)? View.VISIBLE : View.GONE}"/>

        <include
            android:id="@+id/spring"
            layout="@layout/reverb_spring"
            bind:specific = "@{reverb.specific}"
            android:visibility="@{(reverb.specific.type == EReverbType.SPRING)? View.VISIBLE : View.GONE}"/>
    </LinearLayout>
</layout>